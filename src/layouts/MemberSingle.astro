---
import { Image } from "astro:assets";
import Social from "@/components/Social.astro";
import { markdownify } from "@/lib/utils/textConverter";

const { member } = Astro.props;
const { title, image, social, position, description } = member.data;
const { Content } = await member.render();
---

<section class="section">
  <div class="container">
    <div class="mb-4 text-center md:px-24">
      {
        image && (
          <div class="mb-8">
            <Image
              src={image}
              class="mx-auto rounded-lg"
              height={150}
              width={150}
              alt={title}
            />
          </div>
        )
      }
      <div class="page-heading">
        <h1 set:html={markdownify(title)} class="h2 mb-2" />
        <h3 class="text-lg font-medium opacity-80 mb-8">{description}</h3>
        <Social source={social} className="social-icons-simple" />
      </div>

      <div class="content">
        <Content />
      </div>
    </div>
  </div>
</section>
